{
  "author": "Axel Grude",
  "manifest_version": 2,
  "name": "SmartTemplates",
	"description": "SmartTemplates customizes quote headers and mail template per account. It also replaces Stationery in Tb 68.",
  "version": "3.0pre15",
  "developer": {
	  "name": "Axel Grude (author), Klaus Buecher/opto",
    "url": "http://smarttemplates.quickfolders.org/index.html"
	},
  "applications": {
    "gecko": {
      "id": "smarttemplate4@thunderbird.extension",
      "strict_min_version": "68.0",
      "strict_max_version": "80.0"
    }
  },

  "background": {
    "scripts": ["st-background.js"]
  },
  "experiment_apis": {
    "WindowListener": {
      "schema": "chrome/content/api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "chrome/content/api/WindowListener/implementation.js"
      }
    },  
    "LegacyPrefs": {
      "schema": "chrome/content/api/LegacyPrefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LegacyPrefs"]],
        "script": "chrome/content/api/LegacyPrefs/implementation.js"
      
      }
    }
  },
  "icons": {
    "32": "chrome/content/skin/icon32x32.png",
    "64": "chrome/content/skin/icon64x64.png"
  }	
}
